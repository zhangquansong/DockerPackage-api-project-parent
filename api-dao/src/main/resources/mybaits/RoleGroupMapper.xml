<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.clt.api.dao.RoleGroupDao">
    <resultMap id="BaseResultMap" type="com.clt.api.entity.RoleGroup">
        <id column="rgId" property="id" jdbcType="BIGINT"/>
        <result column="roleGroupName" property="zjy_role_group_name" jdbcType="VARCHAR"/>
        <!--<collection property="roles" ofType="Role" column="rgId">
            <id column="rId" property="id"/>&lt;!&ndash; 这里的column对应的是下面查询的别名，而不是表字段名 &ndash;&gt;
            <result column="roleName" property="zjy_role_name"/>&lt;!&ndash; property对应JavaBean中的属性名 &ndash;&gt;
            <result column="rightDetail" property="zjy_right_detail"/>
            <result column="groupId" property="zjy_group_id"/>
            <result column="companyId" property="zjy_company_id"/>
        </collection>-->
        <collection property="roles" ofType="com.clt.api.entity.Role" select="getRoles" column="rgId">
        </collection>

    </resultMap>

    <!--<select id="getRoleAndRoleGroup" parameterType="RoleGroup" resultMap="BaseResultMap">-->
    <!--SELECT rg.id as rgId,rg.zjy_role_group_name as roleGroupName,r.id as rId,-->
    <!--r.zjy_role_name as roleName,r.zjy_right_detail as rightDetail,-->
    <!--r.zjy_group_id as groupId,r.zjy_company_id as companyId-->
    <!--FROM zjy_role_group AS rg LEFT JOIN zjy_role r ON rg.id=r.zjy_group_id-->
    <!--</select>-->
    <select id="getRoleAndRoleGroup" parameterType="com.clt.api.entity.RoleGroup" resultMap="BaseResultMap">
		SELECT rg.id as rgId,rg.zjy_role_group_name as roleGroupName
        FROM zjy_role_group AS rg
	</select>

    <select id="getRoles" parameterType="int" resultType="com.clt.api.entity.Role">
    SELECT
     id,
     zjy_role_name,
    zjy_right_detail,
     zjy_group_id,
    zjy_company_id

    FROM zjy_role where  zjy_group_id=#{rgId}
    </select>
</mapper>
